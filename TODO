CREATE TABLE family_recipes(  
    id int NOT NULL PRIMARY KEY AUTO_INCREMENT COMMENT 'Primary Key',
    owner VARCHAR(255),
    user_id VARCHAR(255),
    prepared_on VARCHAR(255),
    ingredients VARCHAR(255),
    preparation VARCHAR(255)

) COMMENT '';


